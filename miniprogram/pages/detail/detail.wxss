/* miniprogram/pages/detail/detail.wxss */
.container {}

.btn {
  width: 80%;
  padding: 20rpx;
  margin: 20rpx auto;
  background-color: #6f8657;
  text-align: center;
  border-bottom-left-radius: 50%;
  border-top-right-radius: 50%;
  color: white;
}

.item {
  width: 95%;
  margin: 20rpx auto;
  display: flex;
  flex-wrap: wrap;
  align-items: stretch;
  justify-content: space-between;
  background: #ccccd6;
  border-radius: 10rpx;
}

.detail-item-item {
  background: rgba(255, 0, 0, 0.2);
  margin: 10rpx 1%;
  width: 44%;
  padding: 10rpx 2%;
  border-radius: 10rpx;
  color: #fff;
}

.value {
  text-align: center;
  background: #94232d;
}
.time{
  background: #ccccd6;
  text-align: end;
  font-size: 0.5rem;
}